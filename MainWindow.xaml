<Window x:Class="_2020MintaKozepGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2020MintaKozepGUI"
        mc:Ignorable="d"
        Title="Egyszámjáték GUI" Height="187" Width="489">
    <Grid>
        <Label Content="Játékos neve" HorizontalAlignment="Left" Margin="35,39,0,0" VerticalAlignment="Top"/>
        <Label Content="Játékos tippjei" HorizontalAlignment="Left" Margin="35,70,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="jatekosNeve" TextChanged="jatekosNeve_TextChanged" HorizontalAlignment="Left" Height="23" Margin="125,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170"/>
        <TextBox x:Name="jatekosTippjei" TextChanged="jatekosTippjei_TextChanged" HorizontalAlignment="Left" Height="23" Margin="125,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="255"/>
        <Label x:Name="lblTipp" Content="" HorizontalAlignment="Left" Margin="400,67,0,0" VerticalAlignment="Top" Width="55"/>
        <Button x:Name="btnJatekosHozzadasa" Click="btnJatekosHozzadasa_Click" Content="Játékos hozzáadása" HorizontalAlignment="Left" Margin="150,115,0,0" VerticalAlignment="Top" Width="200"/>
    </Grid>
</Window>
